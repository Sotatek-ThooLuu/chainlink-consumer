{
  "private": "true",
  "workspaces": {
    "packages": [
      "contracts",
      "dapp",
      "devops",
      "eslint-config",
      "plugins/api-consumer",
      "plugins/price-consumer",
      "plugins/random-number-consumer"
    ],
    "nohoist": [
      "**/@types/mocha",
      "**/@types/jest",
      "**/@testing-library/jest-dom",
      "**/@types/testing-library__jest-dom"
    ]
  },
  "scripts": {
    "prepare": "husky install",
    "lint:fix": "wsrun -x @chainlink-consumer/eslint-config lint:fix",
    "test": "wsrun -x @chainlink-consumer/eslint-config test"
  },
  "lint-staged": {
    "src/**/*.{js,ts,jsx,tsx}": [
      "yarn lint:fix"
    ]
  },
  "devDependencies": {
    "husky": "^7.0.1",
    "lint-staged": "^11.1.1",
    "wsrun": "^5.2.4"
  },
  "dependencies": {}
}
